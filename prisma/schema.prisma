generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider  = "postgresql"
    url       = env("DATABASE_URL")
    directUrl = env("DIRECT_URL")
}

enum RegistrationType {
    TEAM
    INDIVIDUAL
    BOTH
}

enum EventCategory {
    EVENT
    WORKSHOP
    EXHIBITION
    HACKATHON
}

enum Branch {
    CSE
    CSE_AI
    CSE_DS
    CSE_IOT
    IT
    ECE
    CE
    EE
    ME
}

enum RegistrationStatus {
    UPCOMING
    OPEN
    CLOSED
}

enum ReviewRequestStatus {
    NONE
    PENDING
    APPROVED
    REJECTED
}

model EventRegistrationForm {
    id String @id @default(uuid())

    title      String
    formURL    String
    formAmount Int

    isActive Boolean @default(true)
    status   Int     @default(0)

    event   Event  @relation(fields: [eventId], references: [id], onDelete: Cascade)
    eventId String

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@index([eventId])
    @@index([isActive, eventId])
    @@index([status, eventId])
}

model EventCoordinator {
    id String @id @default(uuid())

    name   String
    mobile String
    branch Branch
    year   Int

    event   Event  @relation(fields: [eventId], references: [id], onDelete: Cascade)
    eventId String

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@index([eventId])
    @@index([branch, year])
    @@index([mobile])
}

model EventSchedule {
    id String @id @default(uuid())

    title     String
    date      String
    startTime Int
    endTime   Int
    venue     String

    event   Event?  @relation(fields: [eventId], references: [id], onDelete: Cascade)
    eventId String?

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@index([eventId])
    @@index([date, startTime])
    @@index([venue])
    @@index([date, eventId])
}

model Event {
    id String @id @default(uuid())

    title            String
    slug             String @unique
    coordinatorEmail String @unique
    dbPassword       String

    category EventCategory @default(EVENT)

    sequence Int @default(0)

    shortDescription String?
    description      String?

    brochure         String?
    coverImage       String?
    images           String[]
    whatsappGroupURL String?

    judgementCriteria        String?
    disqualificationCriteria String?

    materialsProvided String?

    schedule EventSchedule[]

    durationInDays   Int
    registrationType RegistrationType
    registrationForm EventRegistrationForm[]

    coordinators EventCoordinator[]

    registrationStatus RegistrationStatus
    isHidden           Boolean            @default(false)

    coordinatorManagedData CoordinatorManagedData?

    reviewRequestStatus ReviewRequestStatus @default(NONE)

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@index([category, sequence, createdAt])
    @@index([slug])
    @@index([coordinatorEmail])
    @@index([category, isHidden])
    @@index([registrationStatus, category])
    @@index([reviewRequestStatus, category])
    @@index([isHidden, registrationStatus])
    @@index([category, registrationStatus, isHidden])
    @@index([createdAt])
    @@index([sequence])
    @@index([registrationType, category])
    @@index([durationInDays])
}

model CoordinatorManagedData {
    id        String @id @default(uuid())
    eventSlug String @unique

    shortDescription String
    description      String

    whatsappGroupURL String
    brochure         String
    coverImage       String
    images           String[]

    judgementCriteria        String?
    disqualificationCriteria String?

    materialsProvided String?

    event Event? @relation(fields: [eventSlug], references: [slug], onDelete: Cascade)

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@index([eventSlug])
    @@index([createdAt])
}

enum Role {
    ADMIN
    COORDINATOR
    USER
}

model User {
    id            String    @id @default(uuid())
    name          String?
    email         String?   @unique
    emailVerified DateTime?
    image         String?
    role          Role      @default(USER)
    accounts      Account[]
    sessions      Session[]

    isActive Boolean @default(true)

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@index([email])
    @@index([role, isActive])
    @@index([isActive])
    @@index([createdAt])
    @@index([emailVerified])
}

model Admin {
    id String @id @default(uuid())

    adminId  String @unique
    password String

    isActive Boolean @default(true)

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@index([adminId])
    @@index([isActive])
    @@index([createdAt])
}

model VerificationToken {
    identifier String
    token      String   @unique
    expires    DateTime

    @@unique([identifier, token])
    @@index([expires])
    @@index([identifier])
}

model Account {
    id                       String  @id @default(uuid())
    userId                   String
    type                     String
    provider                 String
    providerAccountId        String
    refresh_token            String?
    access_token             String?
    expires_at               Int?
    token_type               String?
    scope                    String?
    id_token                 String?
    session_state            String?
    user                     User    @relation(fields: [userId], references: [id], onDelete: Cascade)
    refresh_token_expires_in Int?

    @@unique([provider, providerAccountId])
    @@index([userId])
    @@index([provider, providerAccountId])
    @@index([provider])
    @@index([expires_at])
}

model Session {
    id           String   @id @default(uuid())
    sessionToken String   @unique
    userId       String
    expires      DateTime
    user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

    @@index([sessionToken])
    @@index([userId])
    @@index([expires])
    @@index([userId, expires])
}
